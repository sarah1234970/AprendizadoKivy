<ValidatedInputWidget>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10
        
        TextInput:
            id: text_input
            text: root.validated_text
            on_text: root.validated_text = self.text
            size_hint_y: 0.2
        
        Label:
            text: 'Validated: ' + root.validated_text
            size_hint_y: 0.2
            color: (0, 1, 0, 1) if root.validated_text else (1, 0, 0, 1)