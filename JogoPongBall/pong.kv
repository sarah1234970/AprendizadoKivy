#:kivy 1.11.1

<PongGame>:
    ball: pong_ball
    player1: player_left
    player2: player_right
    
    canvas:
        Color:
            rgba:1, 1, 1  # Cor da linha (cinza)
        Rectangle:
            size: 20, root.height
            pos: root.width /2 -5, root.y
    
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
    
    Label:
        font_size: 70
        center_x: root.width * 3/4
        top: root.top - 50
        text: str(root.player2.score)

    Label: #Pontuacao do 1 player
        font_size: 70
        center_x: root.width / 4
        top: root.top -50
        text: str(root.player1.score)

    PongBall:
        id: pong_ball
        size: 50, 50
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Ellipse:
                size: self.size
                pos: self.pos
    
    PongPaddle:
        id: player_left
        x: root.x
        y: root.center_y 
        size: 25, 200
        canvas:
            Color:
                rgba: 0, 0, 1, 1 #Raquete esquerda azul
            Rectangle:
                size: self.size
                pos: self.pos
    
    PongPaddle:
        id: player_right
        x: root.width - 25
        y: root.center_y - 100
        size: 25, 200
        canvas:
            Color:
                rgba: 1, 0, 0, 1 #Raquete esquerda vermelha
            Rectangle:
                size: self.size
                pos: self.pos