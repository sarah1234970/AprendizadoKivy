<ScreenManager>:
    BoasVindasScreen:
        name: 'boas_vindas'
    SugestaoFilmesScreen:
        name: 'sugestao_filmes'

<BoasVindasScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        TextInput:
            id: nome_input
            hint_text: "Digite seu nome"
            multiline: False
            font_size: 18

        Button:
            text: "Continuar"
            font_size: 18
            on_press:
                root.manager.current = 'sugestao_filmes'
                root.manager.get_screen('sugestao_filmes').set_nome(nome_input.text)

<SugestaoFilmesScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        spacing: 10

        Label:
            id: mensagem_label
            text: "Bem-vindo! Selecione um gênero de filme."
            font_size: 20
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1]

        Spinner:
            id: genero_spinner
            text: "Selecione o gênero do filme"
            values: ["Ação", "Comédia", "Animação"]
            size_hint_y: None
            height: '44dp'

        Button:
            text: "Sugerir Filme"
            font_size: 18
            on_press:
                app.sugerir_filme(genero_spinner.text)

        Label:
            id: filme_label
            text: ""
            font_size: 18
            halign: 'center'
            valign: 'middle'
            size_hint_y: None
            height: self.texture_size[1]