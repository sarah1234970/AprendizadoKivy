<Boas_vindas>:
    orientation: 'vertical'
    padding: '10dp'
    spacing: '10dp'

    Label:
        text: '[b]Apps de Boas-vindas[/b]'
        markup: True 
        size_hint_y: none
        height: '40dp'
        font_size: '15sp'
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    TextInput:
        id: entrada_nome
        hint_text: "Digite o seu nome"
        size_hint_y: None
        height: '40dp'
        font_size: '15sp'
        multiline: False
 
    Button:
        text: 'Enviar'
        height: '40dp'
        font_size: "18sp"
        background_normal: ""
        background_color: (0.2, 0.6, 0.8, 1)
        on_release: root.on_enviar_nome()

    Label:
        text:'root.mensagem'
        halign: 'center'
        text_size: self.size
        size_hint_y: None
        height: '40dp'
        
        

    