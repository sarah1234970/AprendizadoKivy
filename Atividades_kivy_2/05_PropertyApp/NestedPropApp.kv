<MainControlWidget>:
    status_obj: status_indicator
    
    StatusIndicator:
        id: status_indicator
    
    Label:
        text: 'Active' if root.status_obj.is_active else 'Inactive'
        color: (0, 1, 0, 1) if root.status_obj.is_active else (1, 0, 0, 1)
        font_size: '30sp'
        pos: root.center_x - self.width/2, root.center_y + 50
    
    Button:
        text: 'Toggle Status'
        size_hint: (0.5, 0.2)
        pos: root.center_x - self.width/2, root.center_y - 50
        on_press: root.toggle_status()